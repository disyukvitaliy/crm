%h2 Log in

.well
  = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10') do |f|
    .form-group
      .col-sm-10.col-sm-offset-2
        - if flash[:notice]
          .alert.alert-info.flash{id: 'flash_notice'}
            = flash[:notice]
        - if flash[:alert]
          .alert.alert-danger.flash{id: 'flash_alert'}
            = flash[:alert]
    = f.email_field :email, placeholder: 'Email', autofocus: true
    = f.password_field :password, placeholder: 'Password', autocomplete: 'off'
    - if devise_mapping.rememberable?
      = f.form_group :remember_me do
        = f.check_box :remember_me
    .form-group
      .col-sm-10.col-sm-offset-2
        =f.submit 'Log in', class: 'btn btn-primary', wrapper: {class: 'has-warning'}
        =button_tag :Cancel, class: 'btn btn-default', type: :reset
    .form-group
      .col-sm-10.col-sm-offset-2
        = render 'devise/shared/links'