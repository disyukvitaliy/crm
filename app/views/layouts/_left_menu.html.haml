.list-group
  =link_to 'Projects', projects_path, class: 'list-group-item'
  =link_to 'New project', new_project_path, class: 'list-group-item'

- if @project_id
  .list-group
    =link_to 'Issues', project_issues_path(@project_id), class: 'list-group-item'
    =link_to 'New issue', new_project_issue_path(@project_id), class: 'list-group-item'
    =link_to 'News', '#', class: 'list-group-item'
    =link_to 'Settings', edit_project_path(@project_id), class: 'list-group-item'