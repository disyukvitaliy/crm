%p#notice= notice

%p
  %b Subj:
  = @issue.subj
%p
  %b Descr:
  = @issue.descr
%p
  %b Start date:
  = @issue.start_date
%p
  %b Due date:
  = @issue.due_date
%p
  %b Estimated time:
  = @issue.estimated_time_as_float
%p
  %b Spent time:
  = link_to @issue.spent_time_as_float, issue_time_entries_path(@issue)
%p
  %b Priority:
  = @issue.issue_priority.title if @issue.issue_priority_id
%p
  %b Status:
  = @issue.issue_status.title if @issue.issue_status_id

= link_to :Edit, edit_issue_path(@issue)
\|
= link_to :Back, project_issues_path(@issue.project)
\|
= link_to 'Log time', new_issue_time_entry_path(@issue)