= render layout: 'crud/form' do |f|
  = f.text_field :title, placeholder: 'title'
  = f.form_group :priority do
    = f.check_box :priority, {checked: @model_object.default?, label: 'Default'}, @model_object.class.priorities.key(1), @model_object.class.priorities.key(0)
  = f.form_group :status do
    = f.check_box :status, {checked: @model_object.active?, label: 'Active'}, @model_object.class.statuses.key(1), @model_object.class.statuses.key(0)
  = yield f