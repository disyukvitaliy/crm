.well
  = bootstrap_form_for @user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-10' do |f|
    .form-group
      .col-sm-10.col-sm-offset-2
        = f.alert_message 'Please fix the errors below.', class: 'alert alert-danger'
    = f.text_field :email, placeholder: 'email'
    = f.select(:status, User.statuses.keys, {prompt: 'Select'})
    = yield f
    .form-group
      .col-sm-10.col-sm-offset-2
        = f.submit @user.persisted? ? :Update : :Create, class: 'btn btn-primary', wrapper: {class: 'has-warning'}
        = link_to(:Delete, user_path(@user), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }) if @user.persisted?
        = button_tag :Cancel, class: 'btn btn-default', type: :reset
